<body style="padding-top: 100px; margin-left:30%">
    <div>
        {{#each posts as |post|}}
        <div class="card" style="width: 30rem; border: 3px rgb(206, 120, 191) solid; margin-top: 30px;">
            <div class="card-body">
                <h5 class="card-title">{{post.title}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{post.date}}</h6>
                <p class="card-text">{{post.content}}</p>

                {{#each post.comments as |comment|}}
                <div class="card commentCard">
                    <div class="card-body">
                        <p><strong>{{comment.authorName}}</strong>: {{comment.content}}</p>
                    </div>
                </div>
                {{/each}}

                <div class="input-group mb-3">
                    <input class="form-control form-control-sm border-dark commentForm" type="text" placeholder="Leave a comment">
                    <div class="input-group-append">
                        <button class="btn btn-outline-dark commentBtn" type="button">Submit</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <script src="/js/comment.js"></script>
</body>





